.panel
	-
		var items = [
			{'icon':'house','name':'Начало'},
			{'icon':'creative','name':'Преимущества'},
			{'icon':'banknote','name':'Стоимость'},
			{'icon':'diamond','name':'Почему мы?'},
			{'icon':'gears','name':'Технологии'},
			{'icon':'startup','name':'Команда'},
			{'icon':'contact','name':'Контакты'}
			];
	each item in items
		.panel__el
			.panel__el-icon
				+icon(item.icon,"icon")
			.panel__el-text #{item.name}

